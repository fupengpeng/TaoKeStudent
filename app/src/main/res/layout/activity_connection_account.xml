<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_connection_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg_color"
    android:orientation="vertical">

    <!-- 标题栏 -->
    <include layout="@layout/title_activity" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_connection_account_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/connection_account_interval"
            android:layout_marginStart="@dimen/connection_account_interval"
            android:layout_marginTop="@dimen/connection_account_interval"
            android:divider="@null"
            android:scrollbars="none" />

        <TextView
            android:id="@+id/tv_data_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/unbind_account"
            android:visibility="gone" />

    </RelativeLayout>


</LinearLayout>
