<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="3dp"
    android:paddingTop="3dp">

    <ImageView
        android:id="@+id/iv_bottom_tab_item_image"
        android:layout_width="@dimen/micro_bottom_tab_item_image_width"
        android:layout_height="@dimen/micro_bottom_tab_item_image_height"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/tv_bottom_tab_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_bottom_tab_item_normal"
        android:textSize="@dimen/micro_bottom_tab_item_text_size" />

</LinearLayout>