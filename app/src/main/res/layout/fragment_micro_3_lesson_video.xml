<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_micro_content">

    <ListView
        android:id="@+id/lv_micro_lesson_video_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_load_more"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/micro_3_lesson_list_margin_end"
        android:layout_marginStart="@dimen/micro_3_lesson_list_margin_start"
        android:layout_marginTop="@dimen/micro_3_lesson_list_interval"
        android:divider="@null"
        android:dividerHeight="@dimen/micro_3_lesson_list_interval"
        android:scrollbars="none" />

    <LinearLayout
        android:id="@+id/ll_load_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/load_more_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/click_load_more_data"
            android:textColor="@color/load_more_text_color"
            android:textSize="@dimen/load_more_text_size" />

        <ImageView
            android:layout_width="@dimen/load_more_icon_size"
            android:layout_height="@dimen/load_more_icon_size"
            android:layout_marginStart="@dimen/load_more_padding"
            android:src="@drawable/load_more" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_data_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/fount_not_data"
        android:visibility="gone" />

</RelativeLayout>