<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- 条目项 -->
    <style name="SubItem">
        <item name="android:background">@color/sub_item_bg_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/navigation_icon_margin_start</item>
        <item name="android:paddingEnd">@dimen/title_edge_interval</item>
        <item name="android:paddingTop">@dimen/title_edge_interval</item>
        <item name="android:paddingBottom">@dimen/title_edge_interval</item>
    </style>

    <!-- 用户信息项 -->
    <style name="UserInfoItem">
        <item name="android:paddingTop">@dimen/title_content_interval</item>
        <item name="android:paddingBottom">@dimen/title_content_interval</item>
        <item name="android:paddingStart">@dimen/navigation_icon_margin_start</item>
        <item name="android:paddingEnd">@dimen/title_edge_interval</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/sub_item_bg_color</item>
    </style>
    <!-- 用户信息项标题 -->
    <style name="UserInfoItemTitle">
        <item name="android:textColor">@color/sub_item_text_color</item>
        <item name="android:textSize">@dimen/sub_item_text_size</item>
    </style>


</resources>
